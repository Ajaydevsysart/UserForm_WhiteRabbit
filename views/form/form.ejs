<div class= "container mt-5" style="max-width: 800px;">

    <h1 class='title'>User Form</h1>
    <% if(errMessage.length > 0){ %>
                        
        <div class="alert alert-warning">
            <strong><%=errMessage %></strong>
          </div>
     <% }
     else if (succMessage.length > 0) { %>
        <div class="alert alert-success">
            <strong><%=succMessage %></strong>
        </div>
        <% } %>
        <form action ="/user" method='post'>
            <div class="row">
            <div class = "col-md-6">
                <div class='input-group mb-3'>
                    <label class="form-label col-12">First Name</label>
                    <input type='text'class="form-control" name='fname' placeholder="Enter your first name" required>
                </div>
            </div>
            <div class = "col-md-6">
                <div class='input-group mb-3'>
                    <label class="form-label col-12">Last Name</label>
                    <input type='text' class="form-control" name='lname' placeholder="Enter your last name" required>
                </div>
            </div>
            <div class = "col-md-6">
                <div class='input-group mb-3'>
                    <label class="form-label col-12">Introduction</label>
                    <input type='text' class="form-control" name='introduction' placeholder="Enter introduction" required>
                </div>
            </div>
            <div class = "col-md-6">
                <div class='input-group mb-3'>
                    <label class="form-label col-12">Email</label>
                    <input type='email' class="form-control" name='email' placeholder="Enter your email" required>
                </div>
            </div>
            <div class = "col-md-6">
                <div class='input-group mb-3'>
                    <label class="form-label col-12">Phone</label>
                    <input type='number' class="form-control" pattern="[0-9]{10}" title="Should contain 10 Numbers" name='phone' placeholder="Enter your phone number" required>
                </div>
            </div>
            <div class = "col-md-6">
                <div class='input-group mb-3'>
                    <label class="form-label col-12">Experience</label>
                    <input type='Number' class="form-control" name='experience' placeholder="Enter your experience  in year" required>
                </div>
            </div>
            <div class = "col-md-12">
                <div class='input-group mb-3'>
                    <label class="form-label col-12">Achievements</label>
                    <textarea rows="4" class="form-control" name='achievements' placeholder="Enter your achievements" required></textarea>

                </div>
            </div>
            <div class='col-md-12'>
                <button type="submit" class="btn btn-primary" style="float: right;">Submit</button>
                <!-- <input type='submit' value='submit'> -->
            </div>
        </div>
        </form>

</div>

<script>
    
    window.setTimeout(function() {
         $(".alert").fadeTo(500, 0).slideUp(500, function(){
         $(this).remove(); 
     });
     }, 2500);

</script>

